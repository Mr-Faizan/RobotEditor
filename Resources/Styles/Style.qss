/*-----QTreeWidget-----*/


QTreeView
{
    background-color: #ffffff;

}



QHeaderView::section 
{
    font-size: 10pt; 
    font-weight: bold;
    border: 1px #444;
    padding-left: 5px;
    padding-top: 3px;
    padding-bottom: 2px;
    qproperty-styleSheet: "custom-background-grey";
}

QTreeView::item
{
    color: #000000;
	font-size: 40pt;
    font-weight: bold;
}

QTreeView::item:selected
{
    qproperty-styleSheet : "custom-background-grey";
}




/*-----QPushButton-----*/
QPushButton
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(44, 187, 167, 255),stop:1 rgba(1, 125, 101, 255));
	color: #fff;
	font-size: 10pt;
	border-radius: 4px;
	padding: 10px;

}


QPushButton::pressed
{
	qproperty-styleSheet : "custom-background-grey";

}